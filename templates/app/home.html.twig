    <div class="main main-raised" id="oilMotor">
        <div class="section">
            <div class="container">
                <h2 class="section-title">МОТОРНЫЕ МАСЛА ДЛЯ БЕНЗИНОВЫХ ДВИГАТЕЛЕЙ</h2>
                {% for oil_row in oil_engine_group %}
                <div class="row">
                    {% for oil in oil_row %}
                    <div class="col-md-4">
                        <div class="card card-product card-plain">
                            <div class="card-header card-header-image">
                                    <img src="{{ oil.thumbnailImageUrl }}" alt="oil image">
                            </div>
                            <div class="card-body text-center">
                                <h4 class="card-title">{{ oil.description}}</h4>
                                <div class="price-container">
                                    <span class="price price-old"> &#8376;{{ oil.price*1.1 }}</span>
                                    <span class="price price-new"> &nbsp;&nbsp;&nbsp;&#8376;{{ oil.price }}</span>
                                </div>
                            </div>
                            <!-- single BUY button - with 3 + 1 action -->
                            <div class="card-footer justify-content-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="material-icons">shopping_cart</i>&nbsp;&nbsp;
                                        Купить
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" data-toggle="modal" data-target="#autokzPay" id="autokz_buy" article="{{ oil.article }}">
                                            <i class="material-icons icon icon-info">shopping_cart</i>Купить на auto.kz</a>

                                        {% if oil.kaspiLink!="" %}
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" href="{{ oil.kaspiLink }}" target="_blank"><i class="material-icons icon icon-danger">shopping_cart</i>Купить на kaspi.kz</a>
                                        {% endif %}
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" data-toggle="modal" data-target="#1clickPay"  id="show_clickbuy" article="{{ oil.article }}"><i class="material-icons icon icon-success">shopping_cart</i>Купить в 1 клик</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {%  endfor  %}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <br><br><br><br><br>
    <div class="main main-raised" id="oilTransmission">
        <div class="section">
