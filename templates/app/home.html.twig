                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" data-toggle="modal" data-target="#autokzPay" id="autokz_buy" article="{{ oil.article }}">
                                                    <i class="material-icons icon icon-info">shopping_cart</i>Купить на auto.kz</a>

                                                {% if oil.kaspiLink!="" %}
                                                    <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item" href="{{ oil.kaspiLink }}" target="_blank"><i class="material-icons icon icon-danger">shopping_cart</i>Купить на kaspi.kz</a>
                                                {% endif %}
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" data-toggle="modal" data-target="#1clickPay"  id="show_clickbuy"  article="{{ oil.article }}" ><i class="material-icons icon icon-success">shopping_cart</i>Купить в 1 клик</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {%  endfor  %}
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>


